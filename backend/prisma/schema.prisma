// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.sqlite3"
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  role     String
}

model Case {
  id      Int     @id @default(autoincrement())
  jid     String
  jyear   Int
  jcase   String
  jno     Int
  jdate   String
  jtitle  String
  jfull   String
  remarks String?
}
